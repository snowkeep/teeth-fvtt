<div class="cohorts items-block full-size">
  <div class="item-header bitd-header">
    <a class="item-create" title="{{localize 'TEETH.Item.Add'}}" data-type="cohort"><i class="fas fa-plus"></i></a>
    <h3>{{localize 'TEETH.Cohort.Plural'}}</h3>
  </div>
  <ol class="items-list">
    {{#each cohorts as |item id|}}
      <li class="item {{item.type}} {{#if item.system.active}}active{{/if}}" data-item-id="{{item._id}}">
        <div class="item-description">
          <span class="item-name">{{item.name}}</span>
          <div class="item-tags">
            {{#if item.system.elite}}<span>{{localize 'TEETH.Cohort.Elite'}}</span>{{/if}}
            <span>{{item.system.type}}</span>{{#if item.system.specialisation}},
            <span class="specialisation">{{item.system.specialisation}}</span>{{/if}}
          </div>
          <div class="condition">
            {{#if item.system.harm}}
              <label>{{localize 'TEETH.Harm'}}:</label>
              <span>{{getCohorHarm item.system.harm}}</span>,
            {{/if}}
            <label>{{localize 'TEETH.Cohort.Armor'}}:</label>
            {{#if item.system.armor}}
              <span>{{localize 'TEETH.Available'}}</span>
            {{else}}
              <span>{{localize 'TEETH.Used'}}</span>
            {{/if}}
          </div>
        </div>

        <div class="item-summary">
          <p><b>{{localize 'TEETH.Cohort.Edges'}}:</b> <span>{{item.system.edges}}</span></p>
          <p><b>{{localize 'TEETH.Cohort.Flaws'}}:</b> <span>{{item.system.flaws}}</span></p>
          {{{item.system.description}}}
        </div>

        <div class="item-controls">
          <a class="item-control rollable" data-roll-type="fortune" data-roll-note="{{@root.system.tier.value}}" title="{{localize 'TEETH.Roll.Title'}}"><i class="fas fa-dice"></i></a>
          <a class="item-control item-show" title="{{localize 'TEETH.Item.Show'}}"><i class="fa fa-comment"></i></a>
          <a class="item-control item-edit" title="{{localize 'TEETH.Item.Edit'}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize 'TEETH.Item.Delete'}}"><i class="fas fa-trash"></i></a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>
