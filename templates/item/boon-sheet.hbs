<form class="{{cssClass}} {{item.type}}" autocomplete="off">
  <header class="items-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="item-name"><input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'TEETH.ItemName'}}"/></h1>
      <div class="brief-info">
        <div class="prop">
          <label class="prop-label" for="system.active">{{localize 'TEETH.Ability.IsActive'}}</label>
          <input class="prop-input" type="checkbox" name="system.active" data-dtype="Boolean" {{checked system.active}}></input>
        </div>
        <div class="prop">
          <label class="prop-label" for="system.tier">{{localize 'TEETH.Boon.Tier'}}:</label>
          <input class="prop-input clear-input" type="number" name="system.tier"  value="{{system.tier}}"></input>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    <hr>
    <div class="effect">
      <h3>{{localize 'TEETH.Boon.Effect'}}:</h3>
      <textarea name="system.effect">{{system.effect}}</textarea>
    </div>

    <h3>{{localize 'TEETH.Description'}}</h3>
    {{editor enrichedDescription target="system.description" rollData=rollData button=true engine="prosemirror" editable=editable collaborate=true}}
  </section>

</form>
