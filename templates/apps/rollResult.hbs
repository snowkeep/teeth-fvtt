<div class="roll-message">
  <div class="roll-header">
    <h3 class="roll-name teeth-header">{{name}}</h3>
    <div class="roll-subheader teeth-subheader">
      {{#if data.position.show}}
        <h4 class="position">{{data.position.localize}}</h4>
        <span>|</span>
      {{/if}}
      {{#if data.effect.show}}
        <h4 class="effect">{{data.effect.localize}}</h4>
      {{/if}}
    </div>
  </div>

  <div class="roll-results">
    {{#if data.countAs.show}}
      <h4>{{data.countAs.localize}}</h4>
    {{/if}}
    {{#if data.description}}
      <div>{{{data.description}}}</div>
    {{/if}}
    {{#if data.effect.description}}
      <p>{{{data.effect.description}}}</p>
    {{/if}}
    {{#if data.strangersBargain}}
      <h5>{{localize "TEETH.Roll.Bonus.StrangersBargain"}}</h5>
      <p>{{localize "TEETH.Roll.BonusDescription.StrangersBargain"}}</p>
    {{/if}}
    {{#if data.assistance}}
      <h5>{{localize "TEETH.Roll.Bonus.Assistance"}}</h5>
      <p>{{localize "TEETH.Roll.BonusDescription.Assistance"}}</p>
    {{/if}}
    {{#if data.push.count}}
      <h5>{{localize "TEETH.Roll.Bonus.Push"}}</h5>
      <p>{{data.push.description}}</p>
    {{/if}}
    {{#if data.behaviour.manifest}}
      <h5>{{localize "TEETH.Roll.ManifestBehaviour.Title"}}</h5>
      <p>{{{data.behaviour.description}}}</p>
    {{/if}}
    {{#if data.wilderness.horses}}
      <p>{{localize "TEETH.Roll.WildernessDescription.Horses"}}</p>
    {{/if}}
    {{#if data.wilderness.prepared}}
      <p>{{localize "TEETH.Roll.WildernessDescription.Prepared"}}</p>
    {{/if}}
    {{#if data.wilderness.cautious}}
      <p>{{localize "TEETH.Roll.WildernessDescription.Cautious"}}</p>
    {{/if}}
    {{#if data.wilderness.winter}}
      <p>{{localize "TEETH.Roll.WildernessDescription.Winter"}}</p>
    {{/if}}
    {{#if data.wilderness.distance}}
      <p>{{localize "TEETH.Roll.WildernessDescription.Distance"}}</p>
    {{/if}}
    {{#if data.wilderness.forest}}
      <p>{{localize "TEETH.Roll.WildernessDescription.Forest"}}</p>
    {{/if}}
  </div>

  <ol class="roll-dice">
    {{#each renderDice}}
      <li class="dice {{classes}}">{{result}}</li>
    {{/each}}
  </ol>
</div>
